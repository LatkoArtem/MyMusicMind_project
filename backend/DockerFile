# ==== 1. Stage: build frontend ====
FROM node:18 AS frontend-build

WORKDIR /app/frontend

# Копіюємо package.json і ставимо залежності
COPY frontend/package*.json ./
RUN npm install --legacy-peer-deps

# Копіюємо весь фронтенд і білдимо
COPY frontend/ ./
RUN npm run build


# ==== 2. Stage: backend + frontend ====
FROM python:3.11-slim

# Системні залежності
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    gfortran \
    ffmpeg \
    libpq-dev \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Встановлюємо Python-залежності
COPY backend/requirements.txt ./requirements.txt
RUN pip install --no-cache-dir --upgrade pip \
    && pip install --no-cache-dir -r requirements.txt

# Копіюємо бекенд
COPY backend/ ./

# Копіюємо фронтенд-білд
COPY --from=frontend-build /app/frontend/build ./frontend_build

# Запуск Gunicorn
CMD exec gunicorn app:app --bind 0.0.0.0:$PORT --workers 4
